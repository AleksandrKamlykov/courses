<div class="row ">
    <div class="col s12">
        <ul class="tabs ">
            <li class="tab col s6"><a class="active" href="#login">Войти</a></li>
            <li class="tab col s6"><a href="#register">Регистрация</a></li>

        </ul>
    </div>
    <div id="login" class="col s6 offset-s3">
        <h2>Войти в магазин</h2>
        <form action="/auth/login" method="POST">
            <div class="input-field col s12">
                <input name="email" id="email" type="email" class="validate" required>
                <label for="email">Введите Email</label>
                <span class="helper-text" data-error="Введите Email"></span>
            </div>
            <div class="input-field col s12">
                <input name="pass" id="pass" type="password" class="validate" required>
                <label for="pass">Введите пароль</label>
                <span class="helper-text" data-error="Введите Пароль"></span>
            </div>

            <button class="btn btn-primary">Войти</button>
        </form>
    </div>
    <div id="register" class="col s6 offset-s3">
        <h2>Регистрация</h2>
        <form action="/auth/register" method="POST">
            <div class="input-field col s12">
                <input name="email" id="remail" type="email" class="validate" required>
                <label for="remail">Ведите Email</label>
                <span class="helper-text" data-error="Введите Email"></span>
            </div>
            <div class="input-field col s12">
                <input name="name" id="rname" type="text" class="validate" required>
                <label for="rname">Ведите ваше имя</label>
                <span class="helper-text" data-error="Введите ваше имя"></span>
            </div>
            <div class="input-field col s12">
                <input name="pass" id="rpass" type="password" class="validate" required>
                <label for="rpass">Введите пароль</label>
                <span class="helper-text" data-error="Введите Пароль"></span>
            </div>
            <div class="input-field col s12">
                <input name="repeat" id="confirm" type="password" class="validate" required>
                <label for="confirm">Подтвердите пароль</label>
                <span class="helper-text" data-error="Введите Пароль"></span>
            </div>

            <button class="btn btn-primary">Регистрация</button>
        </form>
    </div>
</div>